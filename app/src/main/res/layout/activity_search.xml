<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchActivity">
    <com.google.android.material.appbar.MaterialToolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:id="@+id/toolbar"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:id="@+id/urlET"
        android:autofillHints="Enter Url"
        android:paddingVertical="11sp"
        android:hint="@string/app_name"
        android:layout_below="@id/toolbar"
        android:inputType="textUri" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:layout_below="@id/urlET"
        android:id="@+id/download"
        android:text="Download"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="180sp"
        android:layout_below="@id/download"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"
        android:id="@+id/thumbnail"
        android:contentDescription="@string/app_name" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/thumbnail"
        android:id="@+id/titleTV"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleTV"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"
        android:id="@+id/channelName"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/videoLength"
        android:layout_below="@id/channelName"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/viewCount"
        android:layout_below="@id/videoLength"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/viewCount"
        android:layout_above="@id/bottom_navigation"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:layout_marginTop="10sp"
        android:id="@+id/recycler"/>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_navigation"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom"/>

</RelativeLayout>